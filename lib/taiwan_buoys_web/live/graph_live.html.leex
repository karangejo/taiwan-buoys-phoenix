<div class="column">
    <form phx-submit="view-buoy" phx-change="update-location">
      <select name="location">
        <%= options_for_select(@location_options, @location) %>
      </select>
      <br/>
      <button type="submit">View Buoy Graph</button>
    </form>
    <div class="graph-container" phx-hook="BuoyChart">
        <canvas id="waveBuoyChart"></canvas>
    </div>
    <div class="graph-container">
        <canvas id="windBuoyChart"></canvas>
    </div>
</div>
